<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_medium"
    android:layout_marginEnd="@dimen/spacing_medium"
    android:layout_marginTop="@dimen/spacing_medium"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    >
  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >
    <ImageView
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:layout_marginStart="@dimen/spacing_medium"
        android:layout_marginEnd="@dimen/spacing_medium"
        android:id="@+id/imgLocationPin"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:layout_marginStart="@dimen/spacing_small"
        android:id="@+id/tvLocationLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textAppearance="?textAppearanceCaption"
        app:layout_constraintStart_toEndOf="@id/imgLocationPin"
        app:layout_constraintTop_toTopOf="@id/imgLocationPin"
        />
    <TextView
        android:layout_marginStart="@dimen/spacing_small"
        android:id="@+id/tvCurrentLocationLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Location"
        android:textAppearance="?textAppearanceSubtitle2"
        app:layout_constraintBottom_toBottomOf="@id/imgLocationPin"
        app:layout_constraintStart_toEndOf="@id/imgLocationPin"
        />

    <View
        android:layout_marginTop="@dimen/spacing_medium"
        android:id="@+id/viewLocation"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/imgLocationPin"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewLocation"
        >


      <androidx.constraintlayout.widget.ConstraintLayout
          android:paddingStart="@dimen/spacing_small"
          android:paddingEnd="@dimen/spacing_small"
          android:paddingVertical="@dimen/spacing_large"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          >
        <ImageView
            android:id="@+id/imgDateTime"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:layout_marginStart="@dimen/spacing_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DateTime"
            android:textAppearance="?textAppearanceCaption"
            app:layout_constraintStart_toEndOf="@id/imgDateTime"
            app:layout_constraintTop_toTopOf="@id/imgDateTime"
            />
        <TextView
            android:layout_marginStart="@dimen/spacing_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Now"
            android:textAppearance="?textAppearanceSubtitle2"
            app:layout_constraintBottom_toBottomOf="@id/imgDateTime"
            app:layout_constraintStart_toEndOf="@id/imgDateTime"
            />
      </androidx.constraintlayout.widget.ConstraintLayout>
      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:paddingVertical="@dimen/spacing_large"

          >
        <ImageView
            android:id="@+id/imgClock"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:layout_marginStart="@dimen/spacing_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration"
            android:textAppearance="?textAppearanceCaption"
            app:layout_constraintStart_toEndOf="@id/imgClock"
            app:layout_constraintTop_toTopOf="@id/imgClock"
            />
        <TextView
            android:layout_marginStart="@dimen/spacing_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1hr"
            android:textAppearance="?textAppearanceSubtitle2"
            app:layout_constraintBottom_toBottomOf="@id/imgClock"
            app:layout_constraintStart_toEndOf="@id/imgClock"
            />
      </androidx.constraintlayout.widget.ConstraintLayout>


      <TextView
          android:gravity="center"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="0.5"
          android:background="?colorAccent"
          android:text="GO"
          android:id="@+id/tvGo"
          android:textAppearance="?textAppearanceHeadline6"
          />


    </LinearLayout>
  </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>