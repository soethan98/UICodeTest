<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_round_border_blue_dark_fill"
    android:paddingVertical="@dimen/spacing_small"
    android:paddingHorizontal="@dimen/spacing_small"
    >
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="@id/tvDay"
      app:layout_constraintEnd_toEndOf="@id/tvHours"
      app:layout_constraintTop_toTopOf="parent"
      android:text="Duration"
      android:id="@+id/tvDurationlbl"
      android:textAppearance="?textAppearanceCaption"
      android:textColor="@color/gray"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="02"
      android:id="@+id/tvDay"
      android:textStyle="bold"
      android:textAppearance="?textAppearanceSubtitle2"
      android:textColor="@color/white"
      app:layout_constraintStart_toStartOf="@id/tvDayLbl"
      app:layout_constraintEnd_toEndOf="@id/tvDayLbl"
      app:layout_constraintTop_toBottomOf="@id/tvDurationlbl"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text=":"
      app:layout_constraintTop_toTopOf="@id/tvDay"
      app:layout_constraintBottom_toBottomOf="@id/tvDay"
      android:id="@+id/tvColon"
      android:textAppearance="?textAppearanceSubtitle2"
      android:textColor="@color/white"
      android:paddingHorizontal="@dimen/spacing_4"
      app:layout_constraintStart_toEndOf="@id/tvDayLbl"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="00"
      android:id="@+id/tvHours"
      android:textStyle="bold"
      android:textAppearance="?textAppearanceSubtitle2"
      android:textColor="@color/white"
      app:layout_constraintStart_toStartOf="@id/tvHourLbl"
      app:layout_constraintEnd_toEndOf="@id/tvHourLbl"
      app:layout_constraintTop_toBottomOf="@id/tvDurationlbl"
      />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="parent"
      android:id="@+id/tvDayLbl"
      android:text="days"
      android:textColor="@color/white"
      app:layout_constraintTop_toBottomOf="@id/tvDay"
      android:layout_marginTop="@dimen/spacing_2"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/tvHourLbl"
      android:text="hours"
      app:layout_constraintStart_toEndOf="@id/tvColon"
      android:textColor="@color/white"
      app:layout_constraintTop_toBottomOf="@id/tvHours"
      android:layout_marginTop="@dimen/spacing_2"/>


</androidx.constraintlayout.widget.ConstraintLayout>